import turtle

def draw_staircase(steps, step_size):
    for _ in range(steps):
        turtle.forward(step_size)
        turtle.left(90)
        turtle.forward(step_size)
        turtle.right(90)

def draw_squares(turns, step_size):
    # Draw a hexagonal concentric
    for banana in range(6):
        for i in range(4):
            turtle.forward(15*banana)
            turtle.left(90)

        turtle.penup()
        turtle.goto(turtle.xcor() -5,turtle.ycor() -6)
        turtle.pendown()

def draw_triangle_spiral(turns, step_size):
    for i in range(turns):
        turtle.forward(step_size + i * 5)
        turtle.left(120)
    
turtle.speed(0)
    
# Draw staircase
turtle.penup()
turtle.goto(-200, 0)
turtle.pendown()
draw_staircase(10, 30)

# Draw square spiral
turtle.penup()
turtle.goto(100, 0)
turtle.pendown()
draw_squares(30, 10)

# Draw triangle spiral
turtle.penup()
turtle.goto(200, -200)
turtle.pendown()
draw_triangle_spiral(30, 10)
    
turtle.done()


